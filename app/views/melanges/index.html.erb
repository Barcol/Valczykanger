<div class="d-sm-flex align-items-center justify-content-between m-4">
  <h1 class="h3 mb-0 text-gray-800"><%= t("activerecord.model.melange.few") %></h1>
</div>

<div class="row text-center justify-content-center">
  <div class="col-10">
    <div class="card shadow mb-4">
      <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">
          <%= @melanges.count %> <%= t("activerecord.model.melange", count: @melanges.count) %>
        </h6>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-12">
            <table class="table table-striped">
              <thead>
              <tr>
                <th>Nazwa</th>
                <th>Data wydarzenia</th>
                <th>Liczba uczestników</th>
                <th></th>
              </tr>
              </thead>
              <tbody>
              <% @melanges.each do |melange| %>
                <tr>
                  <td><%= melange.name %></td>
                  <td><%= melange.event_date %></td>
                  <td><%= melange.participants.count %></td>
                  <td class="text-right">
                    <button class="btn btn-sm btn-secondary dropdown-toggle" data-toggle="dropdown">Akcje</button>
                    <div class="dropdown-menu">
                      <%= link_to melange, class: "dropdown-item" do %>
                        <i class="far fa-address-book mr-5"></i> Pokaż
                      <% end %>
                      <%= link_to edit_melange_path(melange), class: "dropdown-item" do %>
                        <i class="fab fa-github mr-5"></i> Edytuj
                      <% end %>
                      <% if can? :destroy, melange %>
                        <%= link_to melange, method: :delete, class: "dropdown-item", data: { confirm_swal: "Czy jesteś pewien?" } do %>
                          <i class="fab fa-github mr-5"></i> Usuń
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
